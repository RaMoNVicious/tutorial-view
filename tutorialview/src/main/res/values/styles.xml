<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TutorialTitle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding_large</item>
        <item name="android:layout_marginRight">@dimen/padding_large</item>
        <item name="android:layout_marginBottom">@dimen/padding_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:shadowColor">@color/title_shadow</item>
        <item name="android:shadowDy">@dimen/title_shadow_dy</item>
        <item name="android:shadowRadius">@dimen/title_shadow_radius</item>
    </style>

    <style name="TutorialDescription" parent="@style/TutorialTitle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/description</item>
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>